<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>id</th>
      <th>Strains</th>
      <th>Strains %</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
        <% a = wine.strains.pluck(:name).join(', ') %>
        <% b = wine.wine_strains.pluck(:percentage).join(', ') %>
        
      <tr>
        <td><%= wine.name %></td>
        <td><%= "#{a} #{b} %" %></td>
        <td><%= wine.strains.pluck(:name).join(', ') %></td>
        <td><%= wine.wine_strains.pluck(:percentage).join(', ') %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

